<%- include("./../../partials/header") %> <%- include("./../../partials/navbar")
%> <%- include("./../../partials/sidebar") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <!-- general form elements -->
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Form Tambah Payment</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/payment/create" method="post">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="type">Masukan Tipe Pembayaran</label>
                          <input
                            type="text"
                            class="form-control"
                            id="type"
                            name="type"
                            placeholder="Masukan tipe pembayaran"
                          />
                        </div>

                        <div class="form-group">
                          <label>Bank</label>
                          <select
                            required
                            multiple="multiple"
                            data-placeholder="Select a State"
                            style="width: 100%"
                            name="banks"
                            id="banks"
                          >
                            <% banks.forEach((bank, index)=> { %>
                            <option value="<%= bank._id %>">
                              <%= bank.owner %> <%= bank.bankName %> <%=
                              bank.noRekening %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                      <!-- /.card-body -->

                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                    </form>
                  </div>
                  <!-- /.card -->

                  <!-- /.card -->
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<script>
  new MultiSelectTag("banks"); // id
</script>
<%- include("./../../partials/footer") %> <%- include("./../../partials/js") %>
