<%- include("./../../partials/header") %> <%- include("./../../partials/navbar")
%> <%- include("./../../partials/sidebar") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Kategori</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Kategory</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <!-- general form elements -->
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Form Ubah Kategori</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form
                      action="/voucher/edit/<%= voucher._id %>?_method=PUT"
                      method="post"
                      enctype="multipart/form-data"
                    >
                      <div class="card-body">
                        <div class="form-group">
                          <label for="name">Nama Game</label>
                          <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            value="<%= voucher.name %>"
                            placeholder="Masukan nama game"
                          />
                        </div>

                        <div class="form-group">
                          <label>Kategori</label>
                          <select
                            class="form-control select2"
                            style="width: 100%"
                            name="category"
                          >
                            <% categories.forEach((category, index)=> { %>
                            
                            
                            <option
                            value="<%= category._id %>"
                            <% if(voucher.category.toString() === category._id.toString()) { %>
                              selected="selected"
                            <% } %>
                            >
                              <%= category.name %>
                            </option>
                            
                             <% }) %>
                          </select>
                        </div>

                       
                        <div class="form-group">
                          <label>Nominal</label>
                          <select
                            class="select2"
                            multiple="multiple"
                            data-placeholder="Select a State"
                            style="width: 100%"
                            name="nominals"
                          >
                            <% nominals.forEach((nominal, index)=> { %>

                            <option value="<%= nominal._id %>" 
                              <% voucher.nominals.forEach(nominalId => { %>
                                <% if (nominalId.toString() === nominal._id.toString()) { %>
                                  selected
                                <% } %>
                              <% }) %>
                            >
                              <%= nominal.coinQuantity %> <%= nominal.coinName
                              %>
                            </option>
                            <% }) %>
                          </select>
                        </div>

                        <div class="form-group">
                          <label for="image">Gambar</label>
                          <input
                            type="file"
                            class="form-control"
                            id="image"
                            name="image"
                            placeholder="Upload gambar"
                          />

                          <img
                            src="/images/no_image.jpg"
                            alt="preview"
                            id="preview"
                            style="width: 200px; height: 220px"
                          />
                        </div>
                      </div>
                      <!-- /.card-body -->

                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                    </form>
                  </div>
                  <!-- /.card -->

                  <!-- /.card -->
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include("./../../partials/footer") %> <%- include("./../../partials/js") %>
