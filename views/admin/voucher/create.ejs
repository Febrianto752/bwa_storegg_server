<%- include("./../../partials/header") %> <%- include("./../../partials/navbar")
%> <%- include("./../../partials/sidebar") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <!-- general form elements -->
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Form Tambah Voucher</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form
                      action="/voucher/create"
                      method="post"
                      enctype="multipart/form-data"
                    >
                      <div class="card-body">
                        <div class="form-group">
                          <label for="name">Nama Game</label>
                          <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            placeholder="Masukan nama game"
                          />
                        </div>

                        <div class="form-group">
                          <label>Kategori</label>
                          <select
                            class="form-control select2"
                            style="width: 100%"
                            name="category"
                          >
                            <option selected="selected" disabled>
                              Pilih Kategori
                            </option>
                            <% categories.forEach((category, index)=> { %>
                            <option value="<%= category._id %>">
                              <%= category.name %>
                            </option>
                            <% }) %>
                          </select>
                        </div>

                        <div class="form-group">
                          <label>Nominal</label>
                          <select
                            class="select2"
                            multiple="multiple"
                            data-placeholder="Select a State"
                            style="width: 100%"
                            name="nominals"
                          >
                            <% nominals.forEach((nominal, index)=> { %>
                            <option value="<%= nominal._id %>">
                              <%= nominal.coinQuantity %> <%= nominal.coinName
                              %>
                            </option>
                            <% }) %>
                          </select>
                        </div>

                        <div class="form-group">
                          <label for="image">Gambar</label>
                          <input
                            type="file"
                            class="form-control"
                            id="image"
                            name="image"
                            placeholder="Upload gambar"
                          />

                          <img
                            src="/images/no_image.jpg"
                            alt="preview"
                            id="preview"
                            style="width: 30%; height: 50%"
                          />
                        </div>
                      </div>
                      <!-- /.card-body -->

                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                    </form>
                  </div>
                  <!-- /.card -->

                  <!-- /.card -->
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include("./../../partials/footer") %> <%- include("./../../partials/js") %>

<script>
  function readURL(input) {
    const reader = new FileReader();

    reader.onload = function (e) {
      $("#preview").attr("src", e.target.result);
      $("#preview").attr("width", "30%");
      $("#preview").attr("height", "50%");
    };

    reader.readAsDataURL(input.files[0]);
  }

  $("#image").change(function () {
    readURL(this);
  });
</script>
